<meta http-equiv="refresh" content="10" />

<%= link_to "Create Multi-player match", new_match_path %><br>

<%= "Too bad, no one else is online :(" if @users.online.empty?  %>
<%= render partial: 'users/challenge', collection: @users.online, as: 'user' %>
<%= render @new_matches %>

<script type="text/javascript">
  $(document).on('ready page:load', function(){
    new_match = <%= current_user.new_invite? %>;

    if( Number.isInteger(new_match) ){
      window.location.replace(location.pathname + "/" + new_match);
    }
  })
</script>
