$('div.match')
.html("<%= j render partial: 'matches/board', locals: {board: @match} %>")

$('#info').html('<%= @info[:msg] %>')
          .attr('data-action', '<%= @info[:action]%>')

<% if @match.winner || @match.game_end? %>
  $('a#back').removeAttr('hidden')
<% end %>

<% if @match.play_game? %>
 $('a#quit').attr('hidden', 'hidden')
<% end %>
